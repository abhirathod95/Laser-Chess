<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs371m.laser_chess.MainActivity">


    <Button
        android:text="Find A Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findmatch_but"
        android:minHeight="55dp"
        android:minWidth="200dp"
        android:layout_above="@+id/highscore_but"
        android:layout_alignStart="@+id/highscore_but"
        android:layout_marginBottom="10dp"
        android:onClick="findClick"/>

    <Button
        android:text="High Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscore_but"
        android:minHeight="55dp"
        android:minWidth="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/titleText"
        android:textSize="45sp"/>

    <Button
        android:text="Host A Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hostmatch_but"
        android:minHeight="55dp"
        android:minWidth="200dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/findmatch_but"
        android:layout_alignStart="@+id/findmatch_but"
        android:onClick="hostClick"/>

    <com.facebook.login.widget.LoginButton
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_but"
        android:minHeight="55dp"
        android:minWidth="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
